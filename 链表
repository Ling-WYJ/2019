#include <iostream>
#include <list>
#include <iterator>
using namespace std;

void show_list(list<int> &ls)
{
    for (list<int>::iterator it = ls.begin(); it != ls.end(); it++)
    {
        cout << *it << ' ';
    }
    cout << endl;
}

int main()
{
    list<int> my_list;
    my_list.push_back(1);
    my_list.push_back(2);
    my_list.push_back(3);
    my_list.push_back(5);
    my_list.push_back(6);
    my_list.push_back(8);
    cout << "List:" << endl;
    show_list(my_list);
    for (list<int>::iterator it = my_list.begin(); it != my_list.end(); it++)
    {
        if (*it == 5)
        {
            my_list.insert(it, 4);
            break;
        }
    }
    cout << "After insert 4:" << endl;
    show_list(my_list);
    for (list<int>::iterator it = my_list.begin(); it != my_list.end(); it++)
    {
        if (*it == 6)
        {
            my_list.erase(it);
            break;
        }
    }
    cout << "After erase:" << endl;
    show_list(my_list);
    return 0;
}
